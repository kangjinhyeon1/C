#include<stdio.h>
#include<string.h>
int main() {
	int n, sum, score;
	char ch[80];
	scanf("%d", &n);
	for (int i = 0; i < n; i++) {
		sum = 0;
		score = 1;
		scanf("%s", ch);
		for (int j = 0; j < strlen(ch); j++) {
			if (ch[j] == 'O') {
				sum += score;
				score++;
			}
			if (ch[j] == 'X') score = 1;
		}
		printf("%d\n", sum);
	}
	return 0;
}
